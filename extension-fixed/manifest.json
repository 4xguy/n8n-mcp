{
  "dxt_version": "0.0.1",
  "name": "n8n MCP Remote",
  "description": "Connect to n8n workflow automation through MCP - access 500+ nodes documentation, create workflows, and manage automations",
  "author": {
    "name": "4xguy",
    "email": "keithrivas@gmail.com"
  },
  "version": "2.7.9",
  "license": "MIT",
  "homepage": "https://github.com/4xguy/n8n-mcp",
  "categories": ["automation", "workflow", "productivity", "developer-tools"],
  "keywords": ["n8n", "workflow", "automation", "mcp", "nodes", "integrations"],
  "icon": "icon.svg",
  "screenshots": [],
  "server": {
    "type": "node",
    "entry_point": "server/index.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/server/index.js"
      ],
      "env": {
        "SERVER_URL": "${user_config.serverUrl}",
        "AUTH_TOKEN": "${user_config.authToken}"
      }
    }
  },
  "user_config": {
    "serverUrl": {
      "type": "string",
      "title": "n8n MCP Server URL",
      "description": "Your Railway deployment URL (e.g., https://n8n-mcp-production-c68a.up.railway.app)",
      "default": "",
      "required": true,
      "pattern": "^https://.*"
    },
    "authToken": {
      "type": "string", 
      "title": "Authentication Token",
      "description": "Your server's AUTH_TOKEN for secure access",
      "default": "",
      "required": true,
      "sensitive": true
    }
  }
}